<h1>Articles</h1>
<hr>
<h3><%= link_to "Add new post", new_article_path %></h3>
<hr>
<ul style="list-style-type: none">
  <% @articles.each do |art| %>
    <hr>
    <li><%= link_to art.title, article_path(art) %> | <%= link_to "❌", article_path(art), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
  <% end %>
</ul>
